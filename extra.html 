const btn = document.querySelector('.btn');

btn.addEventListener("click" , (e) => {
    let buttonId = e.target.innerText;

    for(let i = 1; i <= 4; i++){
        const sectio = document.querySelector(`.section${i}`);
        if(buttonId == i){
            sectio.style.display = "block";
        }else{
            sectio.style.display = "none";
        }
    }
})